
@model Login

<partial name="_Notification" />


<form method="post" asp-controller="Edit" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create account
            </h2>

            <hr />
        </div>


        <div asp-validation-summary="All"></div>  
        
        <div class="mb-3">                                                                                                      
            <!--Casella di testo per aggiungere l'email-->                                                                      
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" />
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>           
        </div>                                                                                                                  
                                                                                                                                
                                                                                                                                
        <div class="mb-3">                                                                                                      
            <!--Casella di testo per aggiungere la pass-->                                                                      
            <label asp-for="Pass"></label>
            <input asp-for="Pass" class="form-control" placeholder="Password" />
        </div>                                                                                                                  

        <div class="mb-3">
            <td><input class="form-control form-control-lg" type="text" placeholder="Enter the name of your city" id="cityName_id" name="cityName" style="width:350px" /></td>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">
            Create
        </button>

        <a asp-controller="Home" asp-action="Login" class="btn btn-secondary" style="width:150px">
            Back to Home
        </a>



    </div>
</form>